<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="addCouponViewModel"
            type="com.mohannad.coupon.view.ui.coupon.AddCouponViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".view.ui.coupon.AddCouponActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ly_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="@{addCouponViewModel.errorEmail != null ? @drawable/shape_white_radius_with_border_red_6dp: @drawable/shape_white_radius_6dp}"
                android:gravity="center"
                android:orientation="horizontal"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_email_black" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:text="@={addCouponViewModel.email}"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_email_error_fragment_add_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={addCouponViewModel.errorEmail}"
                android:textColor="@color/red"
                android:visibility="@{addCouponViewModel.errorEmail != null ?  View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@+id/ly_email"
                app:layout_constraintTop_toBottomOf="@+id/ly_email" />

            <LinearLayout
                android:id="@+id/ly_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@{safeUnbox(addCouponViewModel.errorWhatsUp != null) ? @drawable/shape_white_radius_with_border_red_6dp: @drawable/shape_white_radius_6dp}"
                android:gravity="center"
                android:orientation="horizontal"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="@+id/ly_email"
                app:layout_constraintStart_toStartOf="@+id/ly_email"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_error_fragment_add_coupon">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_countries"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_bottom_arrow" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/whats_up"
                    android:inputType="phone"
                    android:text="@={addCouponViewModel.whatsUp}"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_mobile_error_fragment_add_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={addCouponViewModel.errorWhatsUp}"
                android:textColor="@color/red"
                android:visibility="@{safeUnbox(addCouponViewModel.errorWhatsUp != null) ?  View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@+id/ly_mobile"
                app:layout_constraintTop_toBottomOf="@+id/ly_mobile" />

            <LinearLayout
                android:id="@+id/ly_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@{safeUnbox(addCouponViewModel.errorCategory) ? @drawable/shape_white_radius_with_border_red_6dp: @drawable/shape_white_radius_6dp}"
                android:gravity="center"
                android:orientation="horizontal"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="@+id/ly_mobile"
                app:layout_constraintStart_toStartOf="@+id/ly_mobile"
                app:layout_constraintTop_toBottomOf="@id/tv_mobile_error_fragment_add_coupon">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_store" />

                <EditText
                    android:id="@+id/et_categories"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_bottom_arrow"
                    android:focusable="false"
                    android:hint="@string/category"
                    android:inputType="text"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_category_error_fragment_add_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/this_filed_is_empty"
                android:textColor="@color/red"
                android:visibility="@{safeUnbox(addCouponViewModel.errorCategory) ?  View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@+id/ly_category"
                app:layout_constraintTop_toBottomOf="@+id/ly_category" />

            <LinearLayout
                android:id="@+id/ly_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@{safeUnbox(addCouponViewModel.errorCompany) ? @drawable/shape_white_radius_with_border_red_6dp: @drawable/shape_white_radius_6dp}"
                android:gravity="center"
                android:orientation="horizontal"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="@+id/ly_category"
                app:layout_constraintStart_toStartOf="@+id/ly_category"
                app:layout_constraintTop_toBottomOf="@id/tv_category_error_fragment_add_coupon">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_brand" />

                <EditText
                    android:id="@+id/et_companies"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_bottom_arrow"
                    android:focusable="false"
                    android:hint="@string/company"
                    android:inputType="text"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_company_error_fragment_add_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/this_filed_is_empty"
                android:textColor="@color/red"
                android:visibility="@{safeUnbox(addCouponViewModel.errorCompany) ?  View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@+id/ly_company"
                app:layout_constraintTop_toBottomOf="@+id/ly_company" />

            <LinearLayout
                android:id="@+id/ly_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@{safeUnbox(addCouponViewModel.errorDescription) ? @drawable/shape_white_radius_with_border_red_6dp: @drawable/shape_white_radius_6dp}"
                android:gravity="center"
                android:orientation="horizontal"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="@+id/ly_company"
                app:layout_constraintStart_toStartOf="@+id/ly_company"
                app:layout_constraintTop_toBottomOf="@id/tv_company_error_fragment_add_coupon">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_description" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/description"
                    android:inputType="text"
                    android:text="@={addCouponViewModel.description}"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_description_error_fragment_add_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/this_filed_is_empty"
                android:textColor="@color/red"
                android:visibility="@{safeUnbox(addCouponViewModel.errorDescription) ?  View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@+id/ly_description"
                app:layout_constraintTop_toBottomOf="@+id/ly_description" />

            <LinearLayout
                android:id="@+id/ly_coupon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@{safeUnbox(addCouponViewModel.errorCoupon) ? @drawable/shape_white_radius_with_border_red_6dp: @drawable/shape_white_radius_6dp}"
                android:gravity="center"
                android:orientation="horizontal"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="@+id/ly_description"
                app:layout_constraintStart_toStartOf="@+id/ly_description"
                app:layout_constraintTop_toBottomOf="@id/tv_description_error_fragment_add_coupon">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_coupon_22dp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/coupon"
                    android:inputType="text"
                    android:text="@={addCouponViewModel.coupon}"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_coupon_error_fragment_add_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/this_filed_is_empty"
                android:textColor="@color/red"
                android:visibility="@{safeUnbox(addCouponViewModel.errorCoupon) ?  View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@+id/ly_description"
                app:layout_constraintTop_toBottomOf="@+id/ly_coupon" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/shape_btn_raduis_15dp"
                android:onClick="@{(view) -> addCouponViewModel.onClick()}"
                android:padding="16dp"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ly_coupon"
                app:layout_constraintStart_toStartOf="@+id/ly_coupon"
                app:layout_constraintTop_toBottomOf="@+id/tv_coupon_error_fragment_add_coupon" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{safeUnbox(addCouponViewModel.dataLoading) ?  View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>