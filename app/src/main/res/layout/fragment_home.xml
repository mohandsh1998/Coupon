<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="homeViewModel"
            type="com.mohannad.coupon.view.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray7"
        tools:context=".view.ui.home.HomeFragment">

        <TextView
            android:id="@+id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingTop="8dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="@{homeViewModel.dataLoadingTabs? View.GONE:View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_tabsCategories"
            tools:text="this is a very long piece of text that will move this is a very long piece of text that will move this is a very long piece of text that will move this is a very long piece of text that will move" />

        <FrameLayout
            android:id="@+id/card_tabsCategories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_light_blue_15dp"
            android:visibility="@{homeViewModel.dataLoadingTabs? View.GONE:View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabsCategories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabBackground="@drawable/indicator_tab_layout"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                app:tabTextAppearance="@style/tab_text"
                app:tabTextColor="@color/black" />
        </FrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{homeViewModel.dataLoadingTabs? View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/shape_solid_pink_light_radius_15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/pink_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <include layout="@layout/shimmer_place_holder_company_layout" />

                    <include layout="@layout/shimmer_place_holder_company_layout" />

                    <include layout="@layout/shimmer_place_holder_company_layout" />

                    <include layout="@layout/shimmer_place_holder_company_layout" />

                    <include layout="@layout/shimmer_place_holder_company_layout" />

                    <include layout="@layout/shimmer_place_holder_company_layout" />

                    <include layout="@layout/shimmer_place_holder_company_layout" />
                </LinearLayout>

                <include layout="@layout/shimmer_place_holder_coupon_layout" />

                <include layout="@layout/shimmer_place_holder_coupon_layout" />

                <include layout="@layout/shimmer_place_holder_coupon_layout" />

                <include layout="@layout/shimmer_place_holder_coupon_layout" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_coupons_pages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>